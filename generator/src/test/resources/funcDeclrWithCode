file : function | procedure;

function : \{ print(1) \} FUNCTION \{ print(2) \} signature \{ print(3) \} COLON \{ print(4) \} type \{ print(5) \} SEMICOLON \{ print(8) \} ;
procedure : PROCEDURE signature SEMICOLON;

signature : name LB args RB;
args : (declaration \{ print("OH, args!") \} (COMMA declaration)*)?;
declaration : name COLON type;

type : STRING \{ print("type") \};
name : STRING \{ print("name") \};

FUNCTION : 'function';
PROCEDURE : 'procedure';

COMMA : ',';
COLON : ':';
SEMICOLON : ';';

LB : '\\(';
RB : '\\)';

STRING : '[\\w]*';
