file : function | procedure;

function : FUNCTION signature COLON type SEMICOLON;
procedure : PROCEDURE signature SEMICOLON;

signature : name LB args RB;
args : (declaration (COMMA declaration)*)?;
declaration : name COLON type;

type : STRING;
name : STRING;

FUNCTION : 'function';
PROCEDURE : 'procedure';

COMMA : ',';
COLON : ':';
SEMICOLON : ';';

LB : '\\(';
RB : '\\)';

STRING : '[\w]*';